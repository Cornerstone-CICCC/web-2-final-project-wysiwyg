---
import { Image } from "astro:assets";
import Container from "./Container.astro";
import logo from "../assets/ddsgnr_logo.svg";
// import Social from "./Social.astro";
import "../styles/global.css";
import Social from "./Social.astro";

const currentYear = new Date().getFullYear();
---

<footer>
  <Container>
    <div class="footer-wrapper">
      <div class="footer-logo">
        <Image src={logo} alt={"dDesigner Logo"} />
      </div>
      <nav class="footer-nav">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/services">Services</a></li>
          <li><a href="/cars">Cars</a></li>
          <li><a href="/shop">Shop</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </nav>
      <div class="footer-social">
        <Social dribbble={false} />
      </div>
    </div>
    <hr class="footer-hr" />
    <div class="footer-copyright">
      <p>{currentYear} Ddsgnr. All right reserved.</p>
      <ul>
        <li><a href="#">Privacy Policy</a></li>
        <li><a href="#">Terms of Service</a></li>
        <li><a href="#">Cookies Settings</a></li>
      </ul>
    </div>
  </Container>
</footer>

<style>
  footer {
    padding-top: 3rem;
    padding-bottom: 3rem;
  }

  .footer-hr {
    margin-bottom: 2rem;
  }
  .footer-wrapper {
  }

  .footer-nav {
    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  .footer-nav ul {
    display: flex;
    justify-content: space-between;
    padding: 0;
  }

  .footer-nav ul li {
    list-style: none;
  }

  .footer-nav ul li a {
    color: #000;
    font-weight: 500;
    text-decoration: none;
  }

  .footer-nav ul li a:hover {
    text-decoration: underline;
  }

  .footer-social {
  }

  .footer-copyright {
    font-size: 0.85rem;
  }

  .footer-copyright ul {
    display: flex;
    padding: 0;
    gap: 0.5rem;
  }

  .footer-copyright ul li {
    list-style: none;
  }
  .footer-copyright ul li a {
    text-decoration: underline;
    color: #000;
  }

  .footer-copyright ul li a:where(:focus, :active, :hover) {
    color: #10f2c5;
  }

  @media screen and (min-width: 768px) {
    .footer-wrapper {
      display: grid;
      justify-content: space-between;
      align-items: center;
      grid-template-columns: 250px 1fr 250px;
    }

    .footer-wrapper > * {
      padding: 0 1rem;
    }

    .footer-nav ul {
      gap: 1.5rem;
      justify-content: center;
    }

    .footer-social {
      display: flex;
      justify-content: flex-end;
    }

    .footer-copyright {
      display: flex;
      gap: 1rem;
      justify-content: center;
      align-items: center;
    }

    .footer-copyright ul {
      margin-top: 0;
    }
  }
</style>
