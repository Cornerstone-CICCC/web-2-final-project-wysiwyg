---
import CarImg from "../../assets/img/contact_form_img.png";
---

<div class="contact-form-container">
  <div class="contact-form-section">
    <div class="tagline">Tagline</div>
    <h2 class="title">Contact Us</h2>
    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
    <form class="contact-form">
      <div class="form-item-container">
        <div class="form-item">
          <p class="label">First name</p>
          <input type="text" class="form-input" />
        </div>
        <div class="form-item">
          <p class="label">Last name</p>
          <input type="text" class="form-input" />
        </div>
        <div class="form-item">
          <p class="label">Phone number</p>
          <input type="text" class="form-input" />
        </div>
        <div class="form-item">
          <p class="label">Email</p>
          <input type="text" class="form-input" />
        </div>
        <div class="form-item">
          <p class="label">Select service</p>
          <select name="services" id="services" class="form-input">
            <option value="" selected disabled></option>
            <option value="car_maintenance">Car maintenance</option>
            <option value="car_fixing">Car fixing</option>
            <option value="consulting">Consulting</option>
          </select>
          <div class="custom-arrow"></div>
        </div>
        <div class="form-item">
          <p class="label">Appointment date</p>
          <input type="date" class="form-input" placeholder="YYYY-MM-DD" />
        </div>
      </div>
      <div class="form-text">
        <p class="label">Message</p>
        <textarea
          class="message"
          name="message"
          rows="5"
          cols="33"
          placeholder="Type your message..."></textarea>
      </div>
      <div class="form-agreement">
        <input type="checkbox" />
        <p class="agreement">I accept the Terms</p>
      </div>
      <div class="form-item">
        <button type="submit" class="submit-button">Submit</button>
      </div>
    </form>
  </div>
  <div class="contact-form-img">
    <img src={CarImg.src} alt="" />
  </div>
</div>

<style>
  .contact-form-container {
    padding: 100px 0;
    display: flex;
    height: 1062px;
    background-color: #f0f0f0;
  }

  .contact-form-section {
    margin: 0 30px;
    flex-grow: 1;
  }

  .tagline {
    font-size: 16px;
  }

  .title {
    margin: 20px 0;
    font-size: 48px;
  }

  .form-input {
    width: 100%;
    height: 48px;
    border-radius: 5px;
    border: solid 1px;
  }

  .form-item-container {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
  }

  .form-item {
    flex: 1 1 calc(50% - 8px);
    box-sizing: border-box;
    margin-top: 10px;
  }

  #services {
    position: relative;
  }

  .form-text {
    margin-top: 20px;
  }

  .message {
    width: 100%;
    height: 180px;
    border-radius: 5px;
  }

  .label {
    font-size: 16px;
    margin: 10px 0;
  }

  .form-agreement {
    display: flex;
  }

  .agreement {
    margin-left: 6px;
  }

  .submit-button {
    width: 99px;
    height: 48px;
    background-color: black;
    color: white;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    margin-top: 30px;
  }

  .submit-button:hover {
    background-color: #303030;
  }

  .contact-form-img {
    display: flex;
    justify-content: center;
    flex-grow: 1;
  }

  .contact-form-img img {
    height: 838px;
  }

  @media (max-width: 768px) {
    .contact-form-container {
      flex-direction: column;
      height: 1217px;
    }

    .title {
      font-size: 32px;
    }

    .tagline {
      display: none;
    }

    .contact-form-img {
      display: none;
    }

    .form-item {
      flex: 1 1 100%;
    }

    .submit-button {
      width: 100%;
    }
  }
</style>
