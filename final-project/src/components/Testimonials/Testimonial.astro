---
import { Image } from "astro:assets";
import WebFlow from "../../assets/icons/webflow.svg";
import ChevronRight from "../../assets/icons/chevron-right.svg";

export interface TestimonialProps {
  mainLogo: string;
  content: string;
  user: {
    name: string;
    position: string;
    avatar: string;
  };
  link: string;
}

interface Props extends TestimonialProps {}

const { content, user } = Astro.props;
---

<div class="testimonial">
  <div class="testimonial-logo">
    <Image src={WebFlow} alt={""} />
  </div>
  <div class="testimonial-content">
    "{content}"
  </div>
  <div class="testimonial-main">
    <div class="media">
      <div class="media-img">
        <img src={user.avatar} />
      </div>
      <div class="media-content">
        <div class="media-title">{user.name}</div>
        <div class="media-text">{user.position}</div>
      </div>
    </div>
  </div>
  <a href="#" class="testimonial-link">
    <div>Read case study</div>
    <div class="chevron-right">
      <Image src={ChevronRight} alt={"chevron right"} />
    </div>
  </a>
</div>

<style>
  .testimonial {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border: 1px solid #000;
    width: 100%;
    height: 100%;
    text-align: left;
    padding: 1.5rem 2rem 2rem;
  }

  .testimonial-content {
    font-size: 1.125rem;
  }

  .testimonial-link {
    display: flex;
    align-items: end;
    text-decoration: none;
    color: #000;
  }

  .testimonial-link > *:first-child {
    margin-right: 1rem;
  }

  .media {
    display: flex;
    align-items: center;
  }
  .media-img {
    width: 56px;
    height: 56px;
  }
  .media-img img {
    max-width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
  }
  .media-content {
    padding-left: 1rem;
  }

  .media-title {
    margin-bottom: 0.25rem;
    font-weight: bold;
  }
</style>
